<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Home_Fragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/main_rele"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/image_slider_rele"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <org.imaginativeworld.whynotimagecarousel.ImageCarousel
                        android:id="@+id/img_slider"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:autoPlay="true"
                        app:autoPlayDelay="3000"
                        app:autoWidthFixing="true"
                        app:infiniteCarousel="true"
                        app:scaleOnScroll="true"
                        app:scalingFactor="0.10"
                        app:showBottomShadow="false"
                        app:showNavigationButtons="false"
                        app:showTopShadow="false" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@id/image_slider_rele"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/table_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/quicksand_semibold"
                        android:text="Available Table = "
                        android:textColor="#F84C05"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/no_of_table_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_toEndOf="@id/table_txt"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="10"
                        android:textColor="#FF0015"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/table_details_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="Table Details"
                        android:textColor="#FF0015"
                        android:textSize="18dp" />


                    <RelativeLayout
                        android:id="@+id/edt_rele"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/no_of_table_txt"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <EditText
                            android:id="@+id/table_no_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand_semibold"
                            android:hint="Table No."
                            android:inputType="number" />

                        <EditText
                            android:id="@+id/customer_name_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/table_no_edt"
                            android:fontFamily="@font/quicksand_semibold"
                            android:hint="Customer Name"
                            android:inputType="textCapWords" />

                        <EditText
                            android:id="@+id/people_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/customer_name_edt"
                            android:fontFamily="@font/quicksand_semibold"
                            android:hint="Number Of People"
                            android:inputType="number" />

                        <Button
                            android:id="@+id/book_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/people_edt"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="10dp"
                            android:backgroundTint="#F84C05"
                            android:fontFamily="@font/quicksand_semibold"
                            android:text="Book" />

                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_slider_rele"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true">

                    <RelativeLayout
                        android:id="@+id/rowOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">

                        <FrameLayout
                            android:id="@+id/tableNo1"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/rect"
                            android:elevation="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="3dp"
                                android:fontFamily="@font/quicksand_bold"
                                android:text="01"
                                android:textColor="#005F9F"
                                android:textSize="25dp" />


                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/tableNo2"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@id/tableNo1"
                            android:background="@drawable/rect"
                            android:elevation="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="3dp"
                                android:fontFamily="@font/quicksand_bold"
                                android:text="02"
                                android:textColor="#005F9F"
                                android:textSize="25dp" />


                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/tableNo3"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@id/tableNo2"
                            android:background="@drawable/rect"
                            android:elevation="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="3dp"
                                android:fontFamily="@font/quicksand_bold"
                                android:text="03"
                                android:textColor="#005F9F"
                                android:textSize="25dp" />


                        </FrameLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rowTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rowOne"
                        android:layout_centerHorizontal="true">

                        <FrameLayout
                            android:id="@+id/tableNo4"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/rect"
                            android:elevation="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="3dp"
                                android:fontFamily="@font/quicksand_bold"
                                android:text="04"
                                android:textColor="#005F9F"
                                android:textSize="25dp" />


                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/tableNo5"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@id/tableNo4"
                            android:background="@drawable/rect"
                            android:elevation="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="3dp"
                                android:fontFamily="@font/quicksand_bold"
                                android:text="05"
                                android:textColor="#005F9F"
                                android:textSize="25dp" />


                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/tableNo6"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@id/tableNo5"
                            android:background="@drawable/rect"
                            android:elevation="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="3dp"
                                android:fontFamily="@font/quicksand_bold"
                                android:text="06"
                                android:textColor="#005F9F"
                                android:textSize="25dp" />


                        </FrameLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rowThree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rowTwo"
                        android:layout_centerHorizontal="true">

                        <FrameLayout
                            android:id="@+id/tableNo7"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/rect"
                            android:elevation="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="3dp"
                                android:fontFamily="@font/quicksand_bold"
                                android:text="07"
                                android:textColor="#005F9F"
                                android:textSize="25dp" />


                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/tableNo8"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@id/tableNo7"
                            android:background="@drawable/rect"
                            android:elevation="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="3dp"
                                android:fontFamily="@font/quicksand_bold"
                                android:text="08"
                                android:textColor="#005F9F"
                                android:textSize="25dp" />


                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/tableNo9"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@id/tableNo8"
                            android:background="@drawable/rect"
                            android:elevation="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="3dp"
                                android:fontFamily="@font/quicksand_bold"
                                android:text="09"
                                android:textColor="#005F9F"
                                android:textSize="25dp" />


                        </FrameLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rowFour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rowThree"
                        android:layout_centerHorizontal="true">

                        <FrameLayout
                            android:id="@+id/tableNo10"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/rect"
                            android:elevation="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="3dp"
                                android:fontFamily="@font/quicksand_bold"
                                android:text="10"
                                android:textColor="#005F9F"
                                android:textSize="25dp" />


                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/tableNo11"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@id/tableNo10"
                            android:background="@drawable/rect"
                            android:elevation="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="3dp"
                                android:fontFamily="@font/quicksand_bold"
                                android:text="11"
                                android:textColor="#005F9F"
                                android:textSize="25dp" />


                        </FrameLayout>


                        <FrameLayout
                            android:id="@+id/tableNo12"
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@id/tableNo11"
                            android:background="@drawable/rect"
                            android:elevation="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="3dp"
                                android:fontFamily="@font/quicksand_bold"
                                android:text="12"
                                android:textColor="#005F9F"
                                android:textSize="25dp" />


                        </FrameLayout>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tableDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Table Details"
                        android:layout_below="@id/rowFour"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="20dp"
                        android:fontFamily="@font/quicksand_bold"
                        android:textColor="#005F9F"
                        android:textSize="20dp"/>


                </RelativeLayout>



        </RelativeLayout>


    </ScrollView>

</RelativeLayout>