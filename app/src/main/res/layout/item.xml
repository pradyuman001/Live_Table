<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="80dp"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />


        <TextView
            android:id="@+id/table_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/quicksand_medium"
            android:text="Table No."
            android:textColor="#005F9F" />

        <TextView
            android:id="@+id/tableNoTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="1"
            android:textColor="#005F9F"
            android:textSize="30dp" />

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/main_rele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/card_view"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/customer_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="ROCKY"
            android:textColor="#005F9F"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/quicksand_medium"
            android:text="12:12:12"
            android:textColor="#005F9F"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/group_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/customer_name_txt"
            android:layout_marginTop="10dp"
            android:src="@drawable/group"
            app:tint="#55B4F4" />

        <TextView
            android:id="@+id/num_people_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customer_name_txt"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/group_img"
            android:fontFamily="@font/quicksand_bold"
            android:text="2"
            android:textColor="#005F9F"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/editImageBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/edit"
            android:layout_toRightOf="@id/num_people_txt"
            android:layout_below="@id/customer_name_txt"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/booked_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/time_txt"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:backgroundTint="#005F9F"
            android:text="Booked"
            android:fontFamily="@font/quicksand_semibold"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/card_view"
        android:background="#B1AEAE"
        android:layout_marginTop="15dp"/>

</RelativeLayout>


